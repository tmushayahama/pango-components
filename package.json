{
  "name": "pango-web-components",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "scripts": {
    "clear": "npm run clear --workspaces",
    "start:web-components": "npm run start --workspace packages/web-components",
    "start:docs": "npm run start --workspace website",
    "build": "npm run build --workspaces",
    "build:web-components": "npm run build --workspace packages/web-components",
    "build:docs": "npm run build --workspace website",
    "format": "prettier --write .",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "npm run test --workspaces"
  },
  "workspaces": [
    "packages/*",
    "website"
  ],
  "devDependencies": {
    "@eslint/js": "^9.15.0",
    "del-cli": "^6.0.0",
    "eslint": "^9.15.0",
    "eslint-config-prettier": "^9.1.0",
    "globals": "^15.12.0",
    "prettier": "3.3.3",
    "typescript": "~5.6.2",
    "typescript-eslint": "^8.15.0"
  },
  "license": "MIT"
}